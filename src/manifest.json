{
  "manifest_version": 3,
  "name": "ByteSense",
  "description": "In Development",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage", "webNavigation", "tabs", "webRequest"],
  "icons": {
    "16": "assets/icons/bytesense_logo_dark.png",
    "32": "assets/icons/bytesense_logo_dark.png",
    "48": "assets/icons/bytesense_logo_dark.png",
    "128": "assets/icons/bytesense_logo_dark.png"
  },
  "action": {
    "default_title": "Click Me",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content_script/script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "common/constants.js",
        "common/helpers.js",
        "common/htmlParsers.js"
      ]
    }
  ],
  "background": {
    "service_worker": "./background/background.js"
  },
  "host_permissions": ["<all_urls>"]
}
